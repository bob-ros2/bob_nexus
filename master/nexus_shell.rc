# --- Nexus Mastermind Shell Configuration ---

# 1. Source user profile if it exists (as requested: before ./.profile)
if [ -f .profile ]; then
    . ./.profile
fi

# 2. Source system and user bashrc to maintain aliases and standard colors
if [ -f /etc/bash.bashrc ]; then
    . /etc/bash.bashrc
fi
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

